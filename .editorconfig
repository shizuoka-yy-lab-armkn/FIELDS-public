# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

[*.py]
indent_size = 4

[*.{ts,js,mjs,cjs,tsx,jsx}]
indent_size = 2

[nginx/**.conf]
indent_size = 4

[*.md]
indent_size = 4

[Makefile]
indent_style = tab

[*.{json,yaml,yml,toml}]
indent_size = 2
