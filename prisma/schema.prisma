datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator js {
  provider = "prisma-client-js"
}

model User {
  id          String @id @default(cuid())
  username    String @unique
  displayName String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recordings Recording[]
}

model Recording {
  id          String @id @default(cuid())
  subjectSlug String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  startedAt DateTime
  endedAt   DateTime

  foreheadCameraVideo ForeheadCameraVideo?
  segments            RecordingSegment[]
}

model ForeheadCameraVideo {
  id String @id @default(cuid())

  recording   Recording @relation(fields: [recordingId], references: [id])
  recordingId String    @unique

  fps            Float
  prelude_frames Int    @default(0)
  total_frames   Int    @default(0)
  filepath       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RecordingSegment {
  id             Int    @id @default(autoincrement())
  assemblyStepId String

  recordingId String
  recording   Recording @relation(fields: [recordingId], references: [id])

  beginFrame Int // 開始フレーム (0-indexed)
  endFrame   Int // 終了フレーム (0-indexed); 半開区間なのでこの点は含めない

  tasLikelihood Float @default(0) // TAS (Temporal Action Segmentation) の尤度
}
